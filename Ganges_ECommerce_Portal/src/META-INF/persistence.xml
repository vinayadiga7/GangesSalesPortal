<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
		
	<persistence-unit name="JPA">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.Ganges.Entity.CustomerEntity</class>
        <class>com.Ganges.Entity.ProductEntity</class>
        <class>com.Ganges.Entity.OrderHeaderEntity</class>
        <class>com.Ganges.Entity.KartEntity</class>
        <class>com.Ganges.Entity.OrderDetailsEntity</class>
        <class>com.Ganges.Entity.TransactionEntity</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true" />
        </properties>
    </persistence-unit>
	
	
</persistence>
